{
    "root": true,
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jasmine": true
    },
    "globals": {

    },
    "rules": {
        // Possible Errors
        // Most are inherited from eslint:recommended
        "no-constant-condition": 0,
        "no-extra-parens": [2, "functions"],
        "no-unexpected-multiline": 2,
        "valid-jsdoc": [1, { "requireReturn": false, "requireParamDescription": false, "requireReturnDescription": false }],

        // Best Practices
        "accessor-pairs": 0,
        "block-scoped-var": 1,
        "complexity": 0,
        "consistent-return": 1,
        "curly": 2,
        "default-case": 1,
        "dot-location": [1, "property"],
        "dot-notation": 1,
        "eqeqeq": 2,
        "guard-for-in": 1,
        "no-alert": 2,
        "no-caller": 2,
        "no-div-regex": 1,
        "no-else-return": 1,
        "no-empty-label": 0,
        "no-empty-pattern": 1,
        "no-eq-null": 1,
        "no-eval": 2,
        "no-extend-native": [1, { "exceptions": ["String", "Math"] }],
        "no-extra-bind": 1,
        "no-fallthrough": 0,
        "no-floating-decimal": 1,
        "no-implicit-coercion": 1,
        "no-implied-eval": 2,
        "no-invalid-this": 1,
        "no-iterator": 2,
        "no-labels": 2,
        "no-lone-blocks": 1,
        "no-loop-func": 1,
        "no-magic-numbers": 1,
        "no-multi-spaces": 1,
        "no-multi-str": 1,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-new": 2,
        "no-octal-escape": 1,
        "no-param-reassign": 1,
        "no-process-env": 2,
        "no-proto": 2,
        "no-redeclare": 1,
        "no-return-assign": 0,
        "no-script-url": 2,
        "no-self-compare": 1,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-unused-expressions": 1,
        "no-useless-call": 1,
        "no-useless-concat": 1,
        "no-void": 1,
        "no-warning-comments": 0,
        "no-with": 2,
        "radix": 1,
        "vars-on-top": 1,
        "wrap-iife": [2, "outside"],
        "yoda": [2, "never"],

        // Strict Mode
        "strict": [2, "global"],

        // Variables
        "init-declarations": [1, "always"],
        "no-catch-shadow": 1,
        "no-label-var": 2,
        "no-shadow": 1,
        "no-shadow-restricted-names": 2,
        "no-undef": [1, { "typeof": true }],
        "no-undef-init": 1,
        "no-undefined": 2,
        "no-unused-vars": [1, { "vars": "local", "args": "none" }],
        "no-use-before-define": [1, "nofunc"],

        // Node.js
        "callback-return": [1, ["callback", "cb", "next", "func"]],
        "global-require": 2,
        "handle-callback-err": [2, "^(err|error)"],
        "no-mixed-requires": 0,
        "no-new-require": 1,
        "no-path-concat": 1,
        "no-process-exit": 2,
        "no-restricted-modules": 0,
        "no-sync": 2,

        // Style Syntax
        "array-bracket-spacing": [2, "never"],
        "block-spacing": [2, "always"],
        "brace-style": [2, "1tbs", { "allowSingleLine": false }],
        "camelcase": [2, { "properties": "never" }],
        "comma-spacing": [2, { "before": false, "after": true }],
        "comma-style": [2, "last"],
        "computed-property-spacing": [2, "never"],
        "consistent-this": [2, "context"],
        "eol-last": 2,
        "func-names": 0,
        "func-style": 0,
        "id-length": [2, { "min": 1, "max": 20, "properties": "never", "exceptions": ["x", "i", "j", "e"] }],
        "id-match": 0,
        "indent": [2, 4, { "SwitchCase": 1 }],
        "jsx-quotes": 0,
        "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
        "linebreak-style": [2, "unix"],
        "lines-around-comment": [2, { "allowBlockStart": true, "allowBlockEnd": false, "allowObjectEnd": false }],
        "max-nested-callbacks": [2, 2],
        "new-cap": 2,
        "new-parens": 2,
        "newline-after-var": [2, "always"],
        "no-array-constructor": 0,
        "no-continue": 0,
        "no-inline-comments": 0,
        "no-lonely-if": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [2, { "max": 2 }],
        "no-negated-condition": 2,
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-restricted-syntax": 0,
        "no-spaced-func": 2,
        "no-ternary": 0,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 0,
        "no-unneeded-ternary": 2,
        "object-curly-spacing": [2, "always"],
        "one-var": [2, { "var": "always", "let": "always", "const": "never" }],
        "operator-assignment": [2, "always"],
        "operator-linebreak": [2, "none"],
        "padded-blocks": 0,
        "quote-props": [2, "as-needed"],
        "quotes": [2, "single"],
        "require-jsdoc": 2,
        "semi-spacing": 2,
        "semi": [2, "always"],
        "sort-vars": 0,
        "space-after-keywords": 2,
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [2, "never"],
        "space-before-keywords": 2,
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        "space-unary-ops": 2,
        "spaced-comment": [2, "always"],
        "wrap-regex": 0,

        // ES6
        "arrow-parens": [2, "as-needed"],
        "arrow-spacing": 2,
        "constructor-super": 2,
        "generator-star-spacing": 2,
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-this-before-super": 2,
        "no-var": 2,
        "object-shorthand": [2, "always"],
        "prefer-arrow-callback": 0,
        "prefer-const": 0,
        "prefer-reflect": 0,
        "prefer-spread": 1,
        "prefer-template": 0,
        "require-yield": 2,

        // Legacy
        "max-depth": [2, 3],
        "max-len": 0,
        "max-params": [2, 4],
        "max-statements": 0,
        "no-bitwise": 0,
        "no-plusplus": 0
    }
}
